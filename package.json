{
  "name": "forge",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript monorepo",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:citadel": "pnpm --filter @forge/citadel dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "typescript": "^5.9.3"
  }
}
